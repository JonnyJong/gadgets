:root
	--bg #fff
	--bg-1 #fff1
	--bg-4 #fff4
	--color #000
	--color-c #000c
	--color-4 #0004
	--color-1 #0001
	--size 2
	--offset 0

@media (prefers-color-scheme dark)
	:root
		--bg #000
		--bg-1 #0001
		--bg-4 #0004
		--color #fff
		--color-c #fffc
		--color-4 #fff4
		--color-1 #fff1

*
	box-sizing border-box

body
	margin 32px
	background var(--bg)
	color var(--color)
	user-select none

h1
h2
	margin 0
	font-weight 100
	font-size 64px

h2
	font-size 32px

a
	color var(--color-c)
	text-decoration none

a:hover
	color var(--color)

body
	margin 0
	user-select none

::selection
	background var(--color-c)
	color var(--bg)

input
	all unset
	box-sizing border-box
	-moz-appearance textfield
	&::-webkit-outer-spin-button
	&::-webkit-inner-spin-button
		-webkit-appearance none
		appearance none

button
	all unset
	position relative
	z-index 1
	box-sizing border-box
	padding 8px 12px
	border-radius 10px
	background var(--color-c)
	color var(--bg)
	transition .1s background, .1s scale
	transform skew(-20deg)
	&>*
		transform skew(20deg)
	&:not(:disabled)
		&:active
			scale .9
		&:hover:not(:disabled)
			@media (pointer fine)
				background var(--color)
	&:disabled
		opacity .5

.flex
	flex auto

.dialog
	position fixed
	top 50%
	left 0
	overflow hidden
	width 100%
	height 0px
	border 1px solid var(--color-4)
	border-right none
	border-left none
	transition 1s height cubic-bezier(.25, .1, .25, 1.5)
	translate 0 -50%
	backdrop-filter blur(20px)

@keyframes dialog-in
	0%
		left calc(var(--left) * 2)

@keyframes dialog-out
	100%
		left 0

.dialog-inner
	position absolute
	left var(--left)
	padding 32px 0
	width calc(100% - var(--left) * 2)
	animation dialog-in 1s cubic-bezier(.25, .1, 0, 1.35)
	--left s('max(10px, calc(50% - 300px))')
	&>button
		width 100%

.dialog-bg
	position absolute
	top -32px
	left -64px
	font-size 256px
	line-height 1
	opacity .1
	filter grayscale(.5)

.dialog-title
	font-weight lighter
	font-size 64px

.dialog-content
	margin-bottom 8px

.dialog-closing
	transition 1s height cubic-bezier(1, 0, 1, .5)
	.dialog-inner
		animation dialog-out 1s cubic-bezier(.8, -.32, 1, .15)

// Matrix Size Control
.control
	position relative
	z-index 100
	display flex
	padding 4px 8px
	gap 2px
	backdrop-filter blur(3px)

.size-input
	padding 4px 12px
	width 100%
	text-align center

.size-input-box
	position relative
	overflow hidden
	margin 0 -16px

@keyframes size-effect
	0%
		opacity 1
		scale 1
	50%
		opacity 1
	100%
		opacity 0
		scale 150

.size-effect
	position absolute
	top 50%
	z-index -1
	width 10px
	height 10px
	background radial-gradient(closest-side, #0000, #0000 30%, var(--color) 60%, #0000 80%)
	animation size-effect .2s cubic-bezier(.6, 0, 1, .45)
	translate 0% -50%

.size-add
	right 0

.size-reduce
	left 0

// Matrix
.factor
	position fixed
	top 50%
	left 50%
	font-weight bolder
	font-size 50vmin
	line-height 1
	opacity .1
	translate -50% -50%

@keyframes shake
	0%
	100%
		transform translateX(0)
	10%
	30%
	50%
	70%
	90%
		transform translateX(-20px) rotate(-10deg)
	20%
	40%
	60%
	80%
		transform translateX(20px) rotate(10deg)

.matrix
	position fixed
	top 50%
	left 50%
	display flex
	flex-direction column
	overflow hidden
	width calc(var(--size) * 32px + 1px)
	height calc(var(--size) * 32px)
	border 1px solid var(--color-c)
	border-top none
	border-bottom none
	transition 1s translate cubic-bezier(.25, .1, .25, 1.5), .5s width ease, .5s height ease
	translate calc((var(--size) + var(--offset)) * -16px) calc((var(--size) + var(--offset)) * -16px)

.matrix-cleaning
	animation shake .82s cubic-bezier(.36, .07, .19, .97) both

.matrix-effect
	position fixed
	top 50%
	left 50%
	width calc(var(--size) * 32px + 1px)
	height calc(var(--size) * 32px)
	transition 1s translate cubic-bezier(.25, .1, .25, 1.5), .5s width ease, .5s height ease
	pointer-events none
	translate calc((var(--size) + var(--offset)) * -16px) calc((var(--size) + var(--offset)) * -16px)

.line
	position absolute
	top calc(var(--i) * 32px)
	left 0
	display flex
	transition .3s top ease, .3s opacity

.cell
	position absolute
	top 0
	left calc(var(--i) * 32px)
	width 32px
	height 32px
	text-align center
	line-height 32px
	transition .3s left ease, .3s opacity

@keyframes row-in
	0%
		scale 1 0

@keyframes row-out
	0%
		scale 1 1

@keyframes scaler-out
	0%
		opacity 1

.row
	position absolute
	top calc(var(--i) * 32px)
	left 0
	width calc(var(--size) * 32px)
	height 32px
	border 1px solid var(--color-c)
	transition .3s top ease
	animation row-in .1s ease

.row-removing
	animation row-out .1s ease
	scale 1 0

.row-scaler
	display flex
	width calc(var(--size) * 32px + 32px)
	background var(--bg)
	animation row-in .1s ease
	&>*
		width 32px
		height 32px
		text-align center
		line-height 32px

.row-scaler-removing
	width calc(var(--size) * 32px)
	background var(--color)
	color var(--color)
	opacity 0
	animation scaler-out .2s ease-out
	&>:last-child
		display none

@keyframes column-in
	0%
		scale 0 1

@keyframes column-out
	0%
		scale 1 1

.column
	position absolute
	top 0
	left calc(var(--i) * 32px)
	width 32px
	height calc(var(--size) * 32px)
	border 1px solid var(--color-c)
	transition .3s left ease
	animation column-in .1s ease

.column-removing
	animation column-out .1s ease
	scale 1

.column-scaler
	display flex
	flex-direction column
	height calc(var(--size) * 32px + 32px)
	background var(--bg)
	animation column-in .1s ease
	&>*
		width 32px
		height 32px
		text-align center
		line-height 32px

.column-scaler-removing
	height calc(var(--size) * 32px)
	background var(--color)
	color var(--color)
	opacity 0
	animation scaler-out .2s ease-out
	&>:last-child
		display none

.offseted
	opacity .5
